            android:src="@drawable/a10"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:id="@+id/cast2" />
       -->
    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
