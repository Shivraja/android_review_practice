            android:layout_alignParentRight="true"
            android:src="@drawable/a11"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:id="@+id/cast1" />
        <ImageView
            android:padding="5dp"
            android:scaleType="fitXY"
            android:layout_below="@+id/cast1"
