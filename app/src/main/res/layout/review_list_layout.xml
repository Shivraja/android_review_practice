<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/review_user_icon_image"
            android:src="@drawable/head_6"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <TextView
            android:gravity="center"
            android:layout_marginLeft="55dp"
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Pradeep"
            android:textColor="#ccb2b9"
            android:textSize="15dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/review_like_button"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_thumb_up_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="110dp"
            android:layout_alignParentRight="true"/>
        <TextView
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="15sp"
            android:text="123"
            android:layout_marginRight="80dp"
            android:id="@+id/review_likes"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"/>
        <ImageView

            android:id="@+id/review_unlike_button"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_thumb_down_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:gravity="center"
            android:textSize="15dp"
            android:text="123"
            android:layout_marginTop="5dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:id="@+id/review_unlikes"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/user_name"
            android:textColor="#ffffff" />
    </RelativeLayout>

    <TextView
        android:padding="5dp"
        android:id="@+id/review"
        android:textSize="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Movie is nice, but the climax is okay, Thai herbs have increasingly gained public attention.Recently, there are a number of Thai herb websites. Each website"
        android:textColor="#ffffff" />
</LinearLayout>