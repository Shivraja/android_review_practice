<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/recomm_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:alpha="0.8"
        android:scaleType="centerCrop"
        android:src="@drawable/a2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".9"
        android:background="#101016" />

    <ImageView
        android:id="@+id/recomm_icon"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:src="@drawable/a10" />

    <TextView
        android:id="@+id/recomm_movie_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/recomm_movie_year"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/recomm_icon"
        android:layout_toRightOf="@id/recomm_icon"
        android:padding="5dp"
        android:singleLine="true"
        android:text="Vedhalamasdfadsfadsdfgsfadsfadsfadfg"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/recomm_movie_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/recomm_movie_name"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@id/recomm_movie_name"
        android:layout_marginBottom="5dp"
        android:padding="5dp"
        android:text="Tamil"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/recomm_movie_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="end"
        android:padding="5dp"
        android:text="2014"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <ImageView
        android:layout_margin="6dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="120dp"
        android:background="#cd0000"
        android:layout_height="20dp" />
    <TextView
        android:id="@+id/recomm_name"
        android:textColor="#ffffff"
        android:text="Pradeep"
        android:singleLine="true"
        android:layout_margin="5dp"
        android:paddingTop="10dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="120dp"
        android:layout_height="30dp" />
</RelativeLayout>